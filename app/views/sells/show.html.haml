.wrapper
  = render 'shared/header'

  .navigation-bar
    = tag.ul class: "navigation-bar__contents" do
      = tag.li link_to('FURIMA', "/", class: "navigation-bar__contents__root")
      = tag.li link_to('ベビー・キッズ', "#", class: "navigation-bar__contents__category navi-link")
      = tag.li link_to('ベビー服(男女兼用)~95cm', "#", class: "navigation-bar__contents__category navi-link")
      = tag.li link_to('アウター', "#", class: "navigation-bar__contents__category navi-link")
      = tag.li link_to('product3', "#", class: "navigation-bar__contents__item navi-link active")

  .sell-product-detail
    = tag.h2("product3", class: "sell-product-detail__title")

    = tag.ul class: "sell-product-detail__items" do
      = tag.li tag.img(src: "/material/pict/dog-1027549_640.png", class: "sell-product-detail__items__main-image")
      = tag.ul class: "sell-product-detail__items__sub-image" do
        = tag.li tag.img(src: "/material/pict/dog-1027549_640.png", class: "sell-product-detail__items__sub-image")
        = tag.li tag.img(src: "/material/pict/dog-1246610_640.png", class: "sell-product-detail__items__sub-image")
        = tag.li tag.img(src: "/material/pict/puppy-3842997_640.png", class: "sell-product-detail__items__sub-image")

    .sell-product-detail__price
      = tag.span("¥30000")
      .sell-product-detail__price__detail
        = tag.span("(税込)")
        = tag.span("送料込み")

    .sell-product-detail__subtitle
      = tag.h3("product3")

    .sell-product-detail__table
      %table
        %tbody
          %tr
            %th
              出品者
            %td
              hoge
          %tr
            %th
              カテゴリー
            %td
              = tag.div link_to('ベビー・キッズ', "#")
              = tag.div link_to('ベビー服(男女兼用)~95cm', "#")
              = tag.div link_to('アウター', "#")
          %tr
            %th
              ブランド
            %td
              ー
          %tr
            %th
              商品のサイズ
            %td
              ー
          %tr
            %th
              商品の状態
            %td
              未使用に近い
          %tr
            %th
              配送料の負担
            %td
              送料込み（出品者負担）
          %tr
            %th
              発送元の地域
            %td
              = tag.div link_to('岩手県', "#")
          %tr
            %th
              発送日の目安
            %td
              4~7日で発送

    .sell-product-detail__option
      = tag.ul class: "sell-product-detail__option__favorite" do
        = tag.li icon('fas', 'star')
        = tag.li "お気に入り 0"
      = tag.ul class: "sell-product-detail__option__report" do
        = tag.li icon('fas', 'flag')
        = tag.li link_to('不適切な商品の通報', "#")

  .sell-product-comment
    = form_with(model: nil, url: nil, local: true, html: { class: "sell-product-comment__form" }) do |f|
      = f.text_area :comment, rows: "4", class:"sell-product-comment__form__field"
      = tag.p "相手のことを考え丁寧なコメントを心がけましょう。不快な言葉遣いなどは利用制限や退会処分となることがあります。"
      = button_tag type: 'submit', class: "sell-product-comment__form__submit" do
        = icon('fas', 'comment')
        コメントする

  .sell-product-links
    .sell-product-links__prev
      = link_to('前の商品', "#")
    .sell-product-links__next
      = link_to('後ろの商品', "#")
  
  .sell-product-relatedItems
    = link_to('ベビー・キッズ', "#")

  = render 'shared/lower-part'
